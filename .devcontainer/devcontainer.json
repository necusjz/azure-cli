{
  "name": "Azure CLI Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:dev-ubuntu-22.04",
  "features": {
    "gh": "latest",
    "python": "3.12"
  },
  "workspaceFolder": "/workspaces",
  "onCreateCommand": "gh auth login",
  "updateContentCommand": "python -m venv ./venv",
  "postCreateCommand": "bash ./azure-cli/.devcontainer/setup.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/venv/bin/python"
      }
    }
  }
}
